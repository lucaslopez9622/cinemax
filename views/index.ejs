<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <title>CineMax</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <nav class="nav">
      <h1>CINEMAX</h1>
      <a href="/login" class="icon"><i class="fa-solid fa-circle-user"></i></a>
    </nav>
  </header>
  <main>
      <div class="banner">
        <img src="/images/banner.png" alt="Imagen 1" class="img-banner">
      </div>


    <div id="carouselapp" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% peliculas.forEach(function(pelicula, index) { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <img src="/images/<%= pelicula.imagen %>" class="d-block w-100" alt="<%= pelicula.nombre %>">
            <div class="carousel-caption">
              <h3><%= pelicula.nombre %></h3>
              <p><%= pelicula.descripcion.replace(/\n/g, '<br>') %></p>
            </div>
          </div>
        <% }) %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselapp" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselapp" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
      </button>
    </div>   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </main>
 
  <footer class="footer">
    <p>Â© 2025 Todos los derechos reservados CINEMAX</p>
  </footer>
</body>
</html>